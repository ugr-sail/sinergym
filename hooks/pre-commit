#!/bin/sh
# Pre-commit hook to run black, ruff, and pyright

echo "ğŸ” Running black..."
black --check .

if [ $? -ne 0 ]; then
  echo "âŒ Black failed. Please fix formatting."
  exit 1
fi

echo "ğŸ” Running ruff..."
ruff check .

if [ $? -ne 0 ]; then
  echo "âŒ Ruff found issues."
  exit 1
fi

echo "ğŸ” Running pyright..."
pyright .

if [ $? -ne 0 ]; then
  echo "âŒ Pyright found type errors."
  exit 1
fi

echo "âœ… All checks passed. Proceeding with commit."